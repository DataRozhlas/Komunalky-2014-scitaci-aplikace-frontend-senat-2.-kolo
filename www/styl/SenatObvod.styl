imgWidth = 90px
.senat-obvod
  position relative
  width 980px
  .kandidati
    float left
    clear left
    width 100%
    margin-top 14px
    height 150px
    .kandidat
      margin-top 10px
      color #333
      color black
      display block
      width 50%
      font-size 20px
      margin-bottom 8px
      position relative
      line-height 1.2em
      .name
        font-weight bold
      .strana
        margin-top -4px
        font-size 12px
        color #333
        font-style italic
      .procent
        font-weight bold
        font-size 18px
      .absolute
        font-weight normal
        font-size 14px
        font-variant small-caps
      &:last-child
        .delim
          display none
      img
        position absolute
        width imgWidth
        height auto
        top 0px
        border 1px solid #ccc
    .bar
      position absolute
      top 147px
      padding 0px (imgWidth + 20px)
      width 100%
      height 15px
      .container
        position relative
        .fill
          position absolute
          left 0px
          &:first-child
            border-top-left-radius 3px
            border-bottom-left-radius 3px
          &:nth-child(2)
            left auto
            right 0px
            border-top-right-radius 3px
            border-bottom-right-radius 3px
          height @height
    .mid
      position absolute
      top 170px
      left 50%
      width 60px
      margin-left -30px
      text-align center
      font-size 11px
      color #333
      .arrow
        position absolute
        top -5px
        left 50%
        margin-left -4px
        triangle(8px, 5px, 'top', ColorHeading)


    .kandidat-0
      float left
      padding-left (imgWidth + 20px)
      img
        left 0px
    .kandidat-1
      float right
      text-align right
      padding-right (imgWidth + 20px)
      img
        right 0px

  .supplemental
    top 0px
    right 0px
