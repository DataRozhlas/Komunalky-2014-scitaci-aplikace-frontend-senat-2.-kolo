.obec
  .headings
    margin-left 68px
    margin-top 13px
  h3.okres
    color #444
    font-style italic
    font-weight normal
    font-size 14px
    margin 6px 0px
  h3
    color ColorHeading
    float left
    clear left
    margin 0px
  .top-vyledky-voleb
    position relative
    height 313px
    width 100%
    overflow auto
    overflow-y auto
    overflow-x hidden
  .download-old
    position absolute
    top 17px
    right 20px
    color ColorHeading
    text-decoration underline
    &:hover
      cursor pointer
      text-decoration none
  .typ
    opacity 1
    transition opacity 0.6s, top 0.6s
    position absolute
    width (1000px - 68px)
    &.deactivating
      opacity 0
  .kostiCont
    position relative
    margin-top 5px
    padding-left 68px
    .kosti
      position relative
      float left
      clear left
      width 100%
      margin-top 14px
      transition height 0.6s
      .kost
        position absolute
        width 20px
        height 20px
        border-radius 2px
        margin-right 8px
        margin-bottom 8px
        background #aaa
        transition background 0.6s, transform 0.6s, top 0.6s, left 0.6s
        transform scale(1)
        z-index 3
        cursor pointer
        &.changed
          transform rotate(90deg)
        &.deactivating
          transform scale(0)
        &.activating
          transform scale(0)
      .fiftyBg
        position absolute
        width 28px
        height 28px
        margin-top -4px
        margin-left -4px
        background lighten(ColorHeading, 87%)
        z-index 2
      .fiftyHeadline
        position absolute
        font-size 0.7em
        text-transform uppercase
        margin-left 5px
        font-variant small-caps
        top -19px
        width 120px
        transition left 0.6s
        .arrow
          position absolute
          top 8px
          left -12px
          triangle(8px, 5px, 'bottom', ColorHeading)

  .map-container
    position absolute
    bottom 0px
    width 100%
    height 290px
    padding-left 68px
    h3
      position absolute
      top -33px
    .map
      position absolute
      width 100%
      height 100%
      bottom 0px
  .senat-container
    position absolute
    width 100%
    padding-left 68px
    margin-top 10px
    transition top 0.6s
    &.hidden
      display none
    .senat-element
      width 100%
